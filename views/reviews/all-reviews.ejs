<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All reviews</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light text-dark">
    <%- include('../partials/nav') %>
    <br />

    <h1 class="text-center">All Reviews</h1>
    <br />

    <div class="container">
      <div class="row">
        <% reviews.forEach(review => { %>
        <div class="col-12 col-md-4 mb-4">
          <div class="card h-100">
            <% if (review.image) { %>
            <img
              src="<%= review.image %>"
              class="card-img-top"
              alt="<%= review.gameName %> Image"
            />
            <% } %>
            <div class="card-body">
              <h5 class="card-title text-center">
                <a class="text-dark" href="/reviews/<%= review._id %>"
                  ><%= review.gameName %> Review By <%= review.owner.username
                  %></a
                >
              </h5>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
